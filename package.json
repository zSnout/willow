{
  "name": "@zsnout/willow",
  "version": "0.1.0",
  "description": "Willow is a reactive web framework that enables JSX syntax, compiles to DOM nodes, and omits a virtual DOM.",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc -b && npm run bundle",
    "dev": "tsc -w",
    "serve": "esbuild --servedir=./dist",
    "minify": "esbuild src/**/* --outdir=dist --minify",
    "bundle": "esbuild src/index.ts --outfile=dist/willow.js --bundle --define:__DEV__=false --format=esm --minify"
  },
  "author": "",
  "license": "GPL-3.0",
  "devDependencies": {
    "csstype": "^3.1.1",
    "esbuild": "^0.15.8",
    "prettier": "^2.7.1",
    "typescript": "^4.8.3"
  }
}
